            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/tv_fifth" />

        <TextView
            android:id="@+id/tv_fifth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="fifth text"
            app:layout_constraintHorizontal_bias="0.1"


            app:layout_constraintLeft_toRightOf="@id/tv_fourth"
            app:layout_constraintRight_toLeftOf="@id/tv_sixth" />

        <TextView
            android:id="@+id/tv_sixth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Sixth text"

            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintLeft_toRightOf="@id/tv_fifth"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

